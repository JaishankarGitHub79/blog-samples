<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
    <description>Entity file for Employee</description>
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <access>PROPERTY</access>
        </persistence-unit-defaults>
    </persistence-unit-metadata>
    <package>entities</package>
    <entity metadata-complete="true" name="Employee" class="entities.Employee">
        <table name="employee"/>
        <named-query name="Employee.getAll">
            <query>SELECT e FROM Employee e</query>
        </named-query>
        <attributes>
            <id name="id">
                <column name="Empl_Id"/>
            </id>
            <basic name="lastName">
                <column name="last_name" insertable="true" updatable="true" unique="false"/>
            </basic>
            <basic name="firstName">
                <column name="first_name" insertable="true" updatable="true" unique="false"/>
            </basic>
            <many-to-one name="department" target-entity="entities.Department">
				<join-column name="dept_id" insertable="true" updatable="true" nullable="false"/>
			</many-to-one>
        </attributes>
    </entity>
</entity-mappings>

